    (setq xiki-bar-special-text nil)

    (setq-default mode-line-format
      (quote (
        (:eval

          ; Add padding around text...
          (xiki-bar-add-padding
            (or xiki-bar-special-text "Ctrl+E Expand (or collapse)     Ctrl+K Keys     Ctrl+Q Quit")
          )

        )

    )))
  )
  `

