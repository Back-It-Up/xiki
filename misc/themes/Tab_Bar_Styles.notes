module Xiki
  Themes.use 'Dark Black BG'

  Styles.mode_line(
    :bold=>true,
    :bg=>'#aaa',
    :fg=>"#666",
    )

  Styles.mode_line_inactive(
    :bg=>'#aaa',
    :fg=>"#666",
    :bold=>true,
    )

  Styles.mode_line_transparent(
    :bg=>"unspecified",
