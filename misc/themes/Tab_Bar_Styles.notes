  Styles.mode_line_transparent_underline(
    :bg=>"unspecified",
    :fg=>"#666",
    :underline=>1,
    )
  Styles.mode_line_transparent_underline_activatable(
    :bg=>"unspecified",
    :fg=>"#666",
    :underline=>1,
    )

  Styles.mode_line_sides(
    :bg=>"unspecified",
    :fg=>"#aaaaaa",
    :underline=>nil,
    )
  Styles.mode_line_sides_underline(
    :bg=>"unspecified",
    :fg=>"#aaaaaa",
    :underline=>1,
    )

  Styles.mode_line_file(
    :fg=>"#fff",
    )

  Styles.vertical_border :fg=>"#aaa", :bg=>'#aaa', :underline=>nil

  Styles.region(
    :bg=>"#333",
    )


  # Message area at bottom
  Styles.minibuffer_prompt :size=>110, :face=>"Monaco", :fg=>"#666"
